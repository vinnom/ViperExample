<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.GetRandomReferenceFragmentView">

    <TextView
        android:id="@+id/get_random_reference_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/tap_the_below_button_string"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/get_random_reference_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@string/get_random_reference_button_string"
        app:layout_constraintEnd_toEndOf="@id/get_random_reference_textview"
        app:layout_constraintStart_toStartOf="@id/get_random_reference_textview"
        app:layout_constraintTop_toBottomOf="@id/get_random_reference_textview" />

</androidx.constraintlayout.widget.ConstraintLayout>